<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/electric_gradient_background" />

    <!-- Lightning Bolt 1 (large, in the background) -->
    <item
        android:width="120dp"
        android:height="250dp"
        android:gravity="center_vertical|right"
        android:right="30dp"
        android:rotation="10">
        <vector
            android:width="120dp"
            android:height="250dp"
            android:viewportWidth="100"
            android:viewportHeight="200">
            <path
                android:strokeColor="#80FFEB3B"
                android:strokeWidth="1.5"
                android:pathData="M90,0 L35,110 L65,110 L15,200 L75,90 L45,90 L90,0" />
        </vector>
    </item>

    <!-- Lightning Bolt 2 (smaller, more prominent) -->
    <item
        android:width="80dp"
        android:height="180dp"
        android:gravity="top|left"
        android:left="40dp"
        android:top="80dp"
        android:rotation="-15">
        <vector
            android:width="80dp"
            android:height="180dp"
            android:viewportWidth="100"
            android:viewportHeight="200">
            <path
                android:strokeColor="#B3FFEB3B"
                android:strokeWidth="2"
                android:pathData="M100,0 L40,110 L70,110 L20,200 L80,90 L50,90 L100,0" />
        </vector>
    </item>

    <!-- Lightning Bolt 3 (small detail) -->
    <item
        android:width="60dp"
        android:height="140dp"
        android:gravity="bottom|left"
        android:left="80dp"
        android:bottom="120dp"
        android:rotation="25">
        <vector
            android:width="60dp"
            android:height="140dp"
            android:viewportWidth="100"
            android:viewportHeight="200">
            <path
                android:strokeColor="#66FFEB3B"
                android:strokeWidth="1"
                android:pathData="M95,0 L40,100 L65,100 L25,180 L75,80 L50,80 L95,0" />
        </vector>
    </item>

    <item
        android:width="40dp"
        android:height="90dp"
        android:gravity="top|right"
        android:top="30dp"
        android:right="20dp"
        android:rotation="-20">
        <vector
            android:width="40dp"
            android:height="90dp"
            android:viewportWidth="100"
            android:viewportHeight="200">
            <path
                android:strokeColor="#99FFEB3B"
                android:strokeWidth="1.2"
                android:pathData="M90,0 L35,110 L65,110 L15,200 L75,90 L45,90 L90,0" />
        </vector>
    </item>

    <item
        android:width="35dp"
        android:height="80dp"
        android:gravity="bottom|right"
        android:bottom="40dp"
        android:right="100dp"
        android:rotation="50">
        <vector
            android:width="35dp"
            android:height="80dp"
            android:viewportWidth="100"
            android:viewportHeight="200">
            <path
                android:strokeColor="#77FFEB3B"
                android:strokeWidth="1"
                android:pathData="M90,0 L35,110 L65,110 L15,200 L75,90 L45,90 L90,0" />
        </vector>
    </item>

</layer-list>