<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/fire_gradient_background" />

    <!-- WALL OF FIRE - Widest, most background flames -->
    <item
        android:width="900dp"
        android:height="500dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="-200dp">
        <vector
            android:width="900dp"
            android:height="500dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#45FF5722"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>

    <!-- Base Layer - GIANT flames -->
    <item
        android:width="550dp"
        android:height="650dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="-180dp">
        <vector
            android:width="550dp"
            android:height="650dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#55FF5722"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>
    <item
        android:width="500dp"
        android:height="600dp"
        android:gravity="bottom|left"
        android:left="-140dp"
        android:bottom="-150dp">
        <vector
            android:width="500dp"
            android:height="600dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#58FF9800"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>

    <!-- Mid Layer - More defined flames -->
    <item
        android:width="220dp"
        android:height="300dp"
        android:gravity="bottom|center_horizontal"
        android:bottom="-80dp">
        <vector
            android:width="220dp"
            android:height="300dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#75FF5722"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>
    <item
        android:width="180dp"
        android:height="240dp"
        android:gravity="bottom|right"
        android:right="40dp"
        android:bottom="-70dp">
        <vector
            android:width="180dp"
            android:height="240dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#85FFC107"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>

    <!-- Foreground Layer - Bright, sharp flames -->
    <item
        android:width="120dp"
        android:height="180dp"
        android:gravity="bottom|left"
        android:left="20dp"
        android:bottom="-30dp">
        <vector
            android:width="120dp"
            android:height="180dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#A0FFEB3B"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>
    <item
        android:width="130dp"
        android:height="190dp"
        android:gravity="bottom|right"
        android:right="-10dp"
        android:bottom="-35dp">
        <vector
            android:width="130dp"
            android:height="190dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#A0FF5722"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>
    
    <item
        android:width="60dp"
        android:height="90dp"
        android:gravity="bottom|left"
        android:left="80dp"
        android:bottom="-5dp">
        <vector
            android:width="60dp"
            android:height="90dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#B0FFEB3B"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>
    <item
        android:width="50dp"
        android:height="80dp"
        android:gravity="bottom|right"
        android:right="80dp"
        android:bottom="-10dp">
        <vector
            android:width="50dp"
            android:height="80dp"
            android:viewportWidth="100"
            android:viewportHeight="120">
            <path
                android:fillColor="#B0FFC107"
                android:pathData="M50,120 C10,90 20,40 50,0 C80,40 90,90 50,120 Z" />
        </vector>
    </item>

</layer-list>