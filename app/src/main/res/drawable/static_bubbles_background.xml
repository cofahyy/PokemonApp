        android:height="100dp"
        android:gravity="bottom|right"
        android:right="20dp"
        android:bottom="-50dp">
        <shape android:shape="oval">
            <solid android:color="#22FFFFFF" />
            <stroke android:width="1dp" android:color="#4DFFFFFF" />
        </shape>
    </item>

